<patchs>
<!-- increase the maximum limit of ram that the game *should* allocate.
     it only complains in the python log if it is exceded.
     It looks to be used for WG to maintain minimum system requirements. -->
<!-- memoryLimit - This is the maximum amount of memory, in MB, that WoT is told that it should allocate to the wwise sound engine.
     Budyx69 recommends that the value is not set above 250MB. -->
<!-- For Relhax, it complains in the python log: [SOUND] Sound system memory limit exceeded. Limit: 250 Total Size: 259.651062 -->
<patch>
  <type>xml</type>
  <mode>edit</mode>
  <patchPath>app</patchPath>
  <file>\res_mods\versiondir\engine_config.xml</file>
  <path>//engine_config.xml/soundMgr/memoryLimit[text()&lt;=275]</path>
  <search>.*</search>
  <replace>275</replace>
</patch>

<!-- First patch adds the event name -->
<patch>
  <type>xml</type>
  <mode>add</mode>
  <file>\\res_mods\\versiondir\\audioww\\audio_mods.xml</file>
  <path>//audio_mods.xml/events</path>
  <search></search>
  <replace>event/name/vo_chat_shotcuts_attack</replace>
</patch>
<!-- second patch adds the event mod-->
<patch>
  <type>xml</type>
  <mode>add</mode>
  <file>\\res_mods\\versiondir\\audioww\\audio_mods.xml</file>
  <path>/audio_mods.xml/events/event[name = &quot;vo_chat_shotcuts_attack&quot;]</path>
  <search></search>
  <replace>mod/mod_vo_chat_shotcuts_attack</replace>
</patch>

